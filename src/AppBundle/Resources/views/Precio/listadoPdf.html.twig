<img style="width: 18%;" src="{{asset('assets/images/logo_small.png')}}" />
<h5> <small>Fecha: {{date('now')|date('d / m / Y H:i')}}</small><br><br>
    <small>Usuario: {{app.user.nombre}} </small></h5>
<hr>
<div style="display:block; clear: both">
    <div class="pageheader notab">
        <h1 class="pagetitle">Listado de Precios</h1>
        <span class="pagedesc"><strong>Lista:  {{listado[0].precioLista}} </strong>- <small>Vigencia: {{listado[0].precioLista.vigenciaDesde|date('d-m-Y')}} al {{listado[0].precioLista.vigenciaHasta|date('d-m-Y')}}</small></span>
    </div>
</div>
<hr>
<table class="lista_precios" cellspacing="0" cellpadding="0">
    <thead>
    <tr>
        <th>CÃ³digo</th>
        <th>Producto</th>
        <th>Precio</th>
    </tr>
    </thead>
    <tbody>
        {% set rubro='' %}
        {% for item in listado %}
        {% if rubro != item.producto.rubro %} 
            {% set rubro=item.producto.rubro %} 
            <tr>
                <th colspan='5'>{{item.producto.rubro}}</th>
            </tr>
        {% endif %}
        <tr>
            <td>{{item.producto.codigo}}</td>
            <td>{{item.producto.nombre}}</td>
            <td>{{item.precio}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
