<style>
    .loaders{
        width: 100%;
        text-align: center;
        margin-top: 10px;
        display:none;
    }
    .solicitado {
	margin: 0 auto 5px auto;
	display: block;
	width: 100%;
	text-align: center;
	color: orangered;
    }
</style>    
{{ form_start(form, {'attr': {'class': 'stdform'}}) }}
<fieldset style="margin-bottom:7px">    
<div>
    <label>Producto:</label>
    <input class="mediuminput" readonly type="text" value="{{entity.producto.codigoNombre}}"/>    
</div>
</fieldset>
<fieldset style="margin-bottom:7px">
<div>       
    {{ form_row(form.cantidad, { 'attr': {'class' : 'width50 floatleft'} }) }}
    <span id="unidmed_unidad" class="unidmed floatleft" style="padding-left: 5px">{{entity.producto.unidadMedida}}</span>
   &nbsp;&nbsp; {{ form_widget(form.bulto, { 'attr': {'class' : 'bulto'} }) }}
   &nbsp;&nbsp;  {{ form_widget(form.cantidadxBulto) }}
   <span id="unidmed_bulto" class="unidmed" style="padding-left: 5px;display: inline-block;">{{entity.producto.unidadMedida}}</span>
</div>
<input id="despachoid" value="{%if entity.id%}{{entity.despacho.id}}{%endif%}" name="despachoid" type="hidden"/>   
</fieldset>
{% if entity.lotes|length>0 %}
   <fieldset>
<div>
    <label>Lotes:</label>
    <span>{{entity.lotesInputTxt}}  <span/>  
</div>
</fieldset>
    {% endif%}
{% if entity.pedidoDetalle %}
<div class="solicitado">
    SOLICITADO: {{entity.pedidoDetalle.cantidadTxt}} - Pedido NÂ° {{entity.pedidoDetalle.pedido.nroPedido}}
</div>
{% endif%}
 <div class="loaders">
    <img src="{{asset('assets/images/loaders/loader1.gif')}}" alt="" />
</div>
 {{ form_end(form) }} 