        	jQuery('.recibido span').html(data.pedrecibidos);
        	/*jQuery('#venc30dias').html('$'+data.venc30dias.toLocaleString());
        	jQuery('#porcobrar').html('$'+data.porcobrar.toLocaleString());
        	jQuery('#porpagar').html('$'+data.porpagar.toLocaleString());*/
	});
</script> 
{% endblock %} 
