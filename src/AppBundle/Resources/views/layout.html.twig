{% extends "::base.html.twig" %}
{% block head_page_javascripts %}
<link rel="stylesheet" href="{{ asset('assets/css/style.default.css') }}" type="text/css" media="all" />
{% if app.session.get('theme') =='contrast'%}
<link id="addonstyle" rel="stylesheet" href="{{ asset('assets/css/style.contrast.css') }}" type="text/css">
{% elseif app.session.get('theme') =='blueline' %}
<link id="addonstyle" rel="stylesheet" href="{{ asset('assets/css/style.blueline.css') }}" type="text/css">    
{% elseif app.session.get('theme') =='greenline' %}
<link id="addonstyle" rel="stylesheet" href="{{ asset('assets/css/style.greenline.css') }}" type="text/css">    
{% endif %} 
<script type="text/javascript">
///// VALORES DE VENTAS Y COMPRAS EN HEADER
        jQuery.get("{{ path('datos_header') }}",function(data){
