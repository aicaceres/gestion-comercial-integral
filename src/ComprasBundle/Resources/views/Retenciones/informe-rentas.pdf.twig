<pdf>
    <dynamic-page page-size="A4-landscape" margin-left="70px" margin-right="40px" margin-top="20px" >
        <placeholders>
            <header>
                <div height="60px" width="100%" >
                    <table>
                        <tr>
                            <td border.type="none" vertical-align="middle">
                                <h3>{{app.session.get('labels')['label1']}}.{{app.session.get('labels')['label2']}}  <span font-size="11px"> Unidad de Negocio: {{ app.session.get('unidneg_nombre')  }} </span></h3>
                            </td>
                        </tr>
                    </table>                                        
                    <div border.color="#F5C98F" height="2px" ></div>   
                    <div height="5px"></div>
                    <div float="right" font-size="7px"> Impreso: {{'now'|date('d-m-Y H:i')}} {{app.user.username|upper}} </div> 
                </div>                      
            </header>
            <footer>
                <div height="30px" width="100%" text-align="right">
                    <page-number />
                </div>
            </footer>
        </placeholders>
        <h2 text-align="center"> Retenciones de Rentas</h2>                   
        <h4><strong>Período:</strong> {{ periodo }} </h4>
        <div height="10px"></div>

        <table font-size="8px">
            <tr>
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.6 cm"><strong>N° CUIT Agente de Retención</strong></td>
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.4 cm"><strong>N° sucursal de Retención</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.4 cm"><strong>N° Comprobante Retención</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.6 cm"><strong>N° CUIT Contribuyente</strong></td>
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="3 cm"><strong>Razón Social Contribuyente</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="3 cm"><strong>Domicilio Contribuyente</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.5 cm"><strong>Fecha de Retención</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="1 cm"><strong>Monto Total de la retención</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="0.4 cm"><strong>Código concepto</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="1 cm"><strong>Monto Imponible</strong></td>                
                <td border.color="black" background.color="#EEEEEE" padding="5px" vertical-align="middle" text-align="center" width="1 cm"><strong>Alícuota aplicada</strong></td>                
            </tr>        
            {% for item in resultado %}
                <tr>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.cuitempresa }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.sucursal }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.nrocomp }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.cuit }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" padding-left="5px" >{{ item.razonsocial }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" padding-left="5px">{{ item.domicilio }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.fecha }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.montoret }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.codconcepto }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.imponible }}</td>
                    <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">{{ item.alicuota }}</td>
                </tr>                
            {% endfor %}  
        </table>         
    </dynamic-page>
</pdf>