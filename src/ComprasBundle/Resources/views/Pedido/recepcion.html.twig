                </div>                     
            </div> 
            <hr style="border:1px solid #eee;">
            <fieldset >
                <div  class="two_fields">
                    {{ form_row(form.fechaEntrega, { 'attr': {'class' : 'datepicker','tabindex':'2'} }) }} 
