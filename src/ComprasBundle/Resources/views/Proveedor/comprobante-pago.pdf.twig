
<pdf>
<dynamic-page page-size="A4" margin-left="30px" margin-right="30px" margin-top="30px" >
        <placeholders>
            <header>
                <div height="160px" width="100%" >
                    <table font-size="11px">
                        <tr>
                            <td border.type="none" >
                                <div width="100%">
                                    <img ignore-error="true" src="{{logo}}" width="80%" />
                                </div>
                            </td>
                            <td border.color="#555555" width="50px" vertical-align="middle" text-align="center">
                                <div font-size="23px"><strong>X</strong> </div>
                            </td>
                            <td border.type="none" text-align="center" vertical-align="middle">
                                <div width="100%" font-size="16px" padding-bottom="10px">
                                    <strong>ORDEN DE PAGO</strong>
                                </div>
                                <div font-size="11px" padding-bottom="5px">
                                    <strong>Número: {{pago.comprobanteNro}} </strong>
                                </div>
                                <div font-size="11px">
                                    <strong>Fecha: {{ pago.fecha| date('d-m-Y') }} </strong>
                                    </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" border.type="none" padding-top="20px">
                                <div padding-left="10px">
                                    <div padding-bottom="10px">{{ empresa.direccion }} </div>
                                    <div padding-bottom="5px">{{ empresa.telefono }} </div>
                                    <div padding-bottom="5px" href="mailto:{{empresa.email}}">{{ empresa.email }} </div>
                                    <div padding-bottom="10px">{{ empresa.condicionIva }} </div>
                                </div>
                            </td>
                            <td border.type="none" padding-top="10px">
                                <div padding-left="40px">
                                    <div>
                                        <div padding-bottom="10px" text-align="center">  </div>
                                        <div padding-bottom="5px" text-align="right"> CUIT: {{ empresa.cuit }} </div>
                                        <div padding-bottom="5px" text-align="right"> DGR: {{ empresa.iibb }} </div>
                                        <div padding-bottom="5px" text-align="right">  </div>
                                        <div padding-bottom="10px" text-align="right">  </div>

                                    </div>

                                </div>
                            </td>
                        </tr>

                    </table>

                    <div height="5px"></div>

                </div>
            </header>
            <footer>
                <div height="200px" width="100%">
                    <div border.color="#555555" height="1px" ></div>
                    <table>
                        <tr>
                            <td border.type="none" font-size="7px" vertical-align="middle">
                                <div padding-bottom="5px" padding-top="5px">{{ pago.getTextoPagosParaOrdenPago}}</div>
                                <div>Op: {{app.user|upper}} - {{'now'|date('d-m-Y H:i')}} </div>
                            </td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="3px"><span>Subtotal:</span></td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="3px">
                                <span> {{pago.moneda.simbolo}}
                                {{(pago.importe + pago.montoRetRentas + pago.montoRetGanancias)|number_format(2,'.',',')}}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td border.type="none"></td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="5px">
                                <p padding="0">DGR <span font-size="9px"> [{{pago.alicuotaRentasTxt}}] </span>:</p>
                            </td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="5px" padding-right="3px">
                                <span>{{pago.moneda.simbolo}} {{ pago.montoRetRentas|number_format(2,'.',',')}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td border.type="none"></td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="5px">
                                <p padding="0">Impuesto a las Ganancias <span font-size="9px"> [{{pago.alicuotaGananciasTxt}}] </span> :</p>
                            </td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="4 cm" padding-top="5px" padding-right="3px">
                                <span>{{pago.moneda.simbolo}} {{ pago.montoRetGanancias|number_format(2,'.',',')}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td border.type="none"></td>
                            <td border.type="none" text-align="right" vertical-align="middle" width="3 cm" margin-top="8px" font-size="18px"><strong>Total:</strong></td>
                            <td border.type="top" border.size="2" text-align="right" vertical-align="middle" width="4 cm" margin-top="8px" font-size="18px"> <strong>$ {{ pago.importe|number_format(2,'.',',') }} </strong>
                            </td>
                        </tr>
                    </table>
                </div>
            </footer>
        </placeholders>
        <div border.color="#555555" height="1px" ></div>
        <table font-size="11px">
            <tr>
                <td border.type="none" padding-top="10px">
                    <strong>PROVEEDOR:</strong> {{pago.proveedor}}
                </td>
                <td border.type="none" padding-top="10px">
                    Dirección: {{pago.proveedor.direccion}}
                </td>
            </tr>
            <tr>
                <td border.type="none" padding-top="10px">
                    IVA: {{pago.proveedor.categoriaIva.descripcion|upper}}
                </td>
                <td border.type="none" padding-top="10px">
                    CUIT: {{pago.proveedor.cuit}}
                </td>
            </tr>

        </table>

        <table font-size="9px" padding-top="20px">
            <tr margin-bottom="8px">
                <td border.color="#555555" background.color="#EEEEEE" height="20px" vertical-align="middle" text-align="center" width="2 cm">
                    Cantidad
                </td>
                <td border.color="#555555" background.color="#EEEEEE" height="20px" vertical-align="middle" text-align="center">
                    Descripción
                </td>
                <td border.color="#555555" background.color="#EEEEEE" height="20px" vertical-align="middle" text-align="center" width="2 cm">
                    Importe
                </td>

            </tr>

{% for item in pago.conceptoTxt %}
            <tr>
                <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">
                    1
                </td>
                <td border.type="none" height="15px" vertical-align="middle" padding-left="10px">
                    {{ item.concepto }}
                </td>
                <td border.type="none" height="15px" vertical-align="middle" text-align="right" padding-right="10px">
                    $ {{ item.monto|number_format(2,'.',',') }}
                </td>
            </tr>
{% endfor %}
        </table>

</dynamic-page>

    {% if pago.montoRetencionRentas > 0 %}
        {% include "ComprasBundle:Proveedor:comprobante-retencion-rentas.pdf.twig" %}
    {% endif %}
    {% if pago.retencionGanancias > 0 %}
        {% include "ComprasBundle:Proveedor:comprobante-retencion-ganancias.pdf.twig" %}
    {% endif %}
</pdf>