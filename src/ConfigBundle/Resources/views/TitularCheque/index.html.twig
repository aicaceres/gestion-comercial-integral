{% extends "AppBundle::layout.html.twig" %}
{% block pageheader %}
<div class="pageheader notab">
    <h1 class="pagetitle">Titular de Cheque</h1>
    <span class="pagedesc">Listado de titulares de cheques</span>
</div><!--pageheader-->
{% endblock %}
{% block contentwrapper %}
    {% include "AppBundle::notificacion.html.twig" %}

<div id="contentwrapper" class="contentwrapper">
    <table cellpadding="0" cellspacing="0" border="0" class="stdtable" id="dyntable2">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>CUIT</th>
                <th>Direcci√≥n</th>
                <th>Localidad</th>
                <th style="width:15%;" class="nosort">Devueltos</th>
                <th style="width:15%;" class="nosort">Activo</th>
                <th class="nosort actionbutton addbutton">
                    {% if app.user.access(app.session.get('unidneg_id'),'sistema_banco') %}
                    <a class="editar create" href="{{ path('sistema_titularcheque_new') }}">Agregar Titular</a>
                    {% else %} &nbsp; {% endif %}
                </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombre|upper }}</td>
                <td>{{ entity.cuit }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.localidad }}</td>
                <td><input type="checkbox" disabled="disabled" {% if entity.devueltos %}checked="checked"{% endif %} /></td>
                <td><input type="checkbox" disabled="disabled" {% if entity.activo %}checked="checked"{% endif %} /></td>
                <td>
                     {% if app.user.access(app.session.get('unidneg_id'),'sistema_banco') %}
                    <a href="{{ path('sistema_titularcheque_edit', { 'id': entity.id }) }}" class="editar btn btnaction btn_pencil" ></a>&nbsp;
                    {% endif %}
                    {% if app.user.access(app.session.get('unidneg_id'),'sistema_banco') %}
                        <a href url="{{ path('sistema_titularcheque_delete', { 'id': entity.id }) }}" class="delete btn btnaction btn_trash" title="Borrar"></a>                                                               
                    {% endif %}
                </td>
            </tr>
           {% endfor %}           
        </tbody>
    </table> 
</div>
{% endblock %}
{% block extra_javascripts %}
{% include "AppBundle::block-list-js.html.twig" %}
{% endblock %}