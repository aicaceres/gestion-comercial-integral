<label for="txtrubro">Rubro:</label>
<select id="txtrubro" name="txtrubro" class="mininput">
    {% for rub in rubros %}
        <option value="{{rub.id}}" {% if rub.id==dato.id %} selected="selected" {% endif %} >
            {{rub.nombre}}
        </option>
    {% endfor %}
</select>
<button href class="addrubro" title="Agregar Rubro" type="button">+</button>