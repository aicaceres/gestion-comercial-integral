{% extends "AppBundle::layout.html.twig" %}
{% block pageheader %}
<div class="pageheader notab">
    <h1 class="pagetitle">Administraci√≥n de Localidades</h1>    
</div><!--pageheader-->
{% endblock %}
{% block contentwrapper %}
    {% include "AppBundle::notificacion.html.twig" %}

<div id="contentwrapper" class="contentwrapper">
    <table cellpadding="0" cellspacing="0" border="0" class="stdtable" id="dyntable2">
        <thead>
            <tr>
                <th>Localidad</th>
                <th>Cod. Postal</th>
                <th>Provincia</th>
                <th class="nosort">Pais</th>
                <th class="nosort actionbutton addbutton">
                    <a class="editar create" href="{{ path('sistema_parametro_new', { 'slug': 'localidad' }) }}">Agregar Localidad</a>
                </th>
            </tr>
        </thead>
        <tbody>
           {% for entity in entities %}
            <tr>
                <td>{{ entity.name |capitalize}}</td>
                <td>{{ entity.codpostal}}</td>
                <td>{{ entity.provincia |capitalize }}</td>
                <td>{{ entity.provincia.pais |capitalize }}</td>
                <td>
                    <a href="{{path('sistema_parametro_edit', { 'slug': 'localidad', 'id': entity.id }) }}" class="editar btn btnaction btn_pencil" ></a>&nbsp;
                    <a href url="{{ path('sistema_localidad_delete', { 'id': entity.id }) }}" class="delete btn btnaction btn_trash" title="Borrar"></a>
                </td>
            </tr>
           {% endfor %}
        </tbody>
    </table> 
</div>
{% endblock %}
    
{% block extra_javascripts %}
{% include "AppBundle::block-list-js.html.twig" %}
{% endblock %}