<script type="text/javascript">
jQuery(function ($) {
    $(window).on('load', function () {
        $('.cancelar').on('blur', function(e){
            $('#ventasbundle_presupuesto_cliente').select2('focus')
            e.stopPropagation();
        })
        $(document).on('keydown',function(e){ detectarControles(e); });

        if('{{entity.cliente.consumidorfinal}}'){
            $('.datos-cliente').hide();
            $('.datos-cf').show();
            $('#ventasbundle_presupuesto_nombreCliente').attr('required', true);
        }else{
            $('.datos-cf').hide();
            $('#ventasbundle_presupuesto_nombreCliente').attr('required', false);
            $('.datos-cliente').show();
        }
        // crea select2 via ajax para cliente
        $('#ventasbundle_presupuesto_cliente').select2({
            ajax: {
            url: "{{path('get_autocomplete_clientes')}}",
            type: "post",
            dataType: 'json',
            delay: 250,
            data: function (params) {
                return {
                searchTerm: params.term // search term
                };
            },
            processResults: function (response) {
                return {
                    results: response
                };
            },
            cache: true
            },
            minimumInputLength: 3
        }).on('change', function() {
            id = $(this).val();
            $.getJSON( "{{ path('get_datos_venta_cliente')}}" , {'id': id}).done(function(data){
                // actualizar partial datos
                if(data){
                    if( data.consumidorfinal ){
                        $('.datos-cliente').hide();
                        $('.datos-cf').show();
                        $('#ventasbundle_presupuesto_nombreCliente').attr('required', true);
                        $('#ventasbundle_presupuesto_nombreCliente').focus();
                    }else{
                        $('.datos-cf').hide();
                        $('#ventasbundle_presupuesto_nombreCliente').val('');
                        $('#ventasbundle_presupuesto_nombreCliente').attr('required', false);
                        $('.datos-cliente').html(data.partial);
                        $('.datos-cliente').show();
                    }
                }
            });
        });
        $('#ventasbundle_presupuesto_cliente').select2('focus');

// al presionar ctrl+enter abrir popup
        $(document).on('click change keydown',
            '#ventasbundle_presupuesto_cliente,#ventasbundle_presupuesto_formaPago,[name*="producto"]', function(e) {
            if (e.keyCode == 13 && e.ctrlKey ) {
                e.preventDefault();
                openModal($(this))
            }
        });
// en buscar abrir popup correspondiente
        $(document).on('click','.btn_search',function(e) {
            obj = $(this).parent().find('select');
            e.preventDefault();
            openModal(obj)
        })
// al modificar forma de pago actualizar datos del partial
        $('#ventasbundle_presupuesto_formaPago').on('change', function() {
            $('.datos-formapago').html('');
            id = $(this).val();
            $.get( "{{ path('get_datos_formapago')}}" , {'id': id}).done(function(data){
                // actualizar datos
                if(data){
                    $('.datos-formapago').html(data);
                    $('.porcentajeRecargo').text( $('#porcentajeRecargo').val() )
                    actualizaTotales();
                }
            });
        });

// Get the container who holds the collection
        $collectionHolder = $('table.venta tbody');
        $collectionHolder.find('.delTd').each(function() {
            addItemFormDeleteLink($(this));
        });
        $collectionHolder.find('.ordTd').each(function(i) {
            $(this).html(i + 1);
        });
        $('#linkAdd').on('click', function(e) {
            e.preventDefault();
            addNewItem();
            e.stopPropagation();
        });

// confirm on submit
        $('.guardar').on('click', function(){
            // controlar que haya items cargados
            let txt = 'PRESUPUESTO:   #'+$('#ventasbundle_presupuesto_nroPresupuesto').val();
            txt = txt + '\n\n' + 'CONFIRMA REGISTRAR EL PRESUPUESTO?' ;
            if( $('#ventasbundle_presupuesto_descuentaStock').attr("checked") ){
                txt = txt + '\n' +'Se realizar√° el descuento de los productos en el stock!';
            }
            // detectar inputs invalidos
            if( $(':invalid').length > 0 ){
                $(':invalid').focus();
                return false;
            }
            if( $('tbody tr.item').length > 0 ){
                if (!confirm(txt)) {
                return false;
                }
                $('#ventasbundle_presupuesto').submit();
            }else{
                alert('Debe ingresar items al presupuesto');
                return false;
            }
        });

    });
// funciones personalizas para el formulario
 function addNewItem() {
    var prototype = $collectionHolder.data('prototype');
    var index = $collectionHolder.data('index');
    var newForm = prototype.replace(/items/g, index);
    $collectionHolder.append(newForm);
    $collectionHolder.data('index', index + 1);
    addItemFormDeleteLink($collectionHolder.find('.delTd').last());
    $collectionHolder.find('.ordTd').last().html($collectionHolder.data('index'));
    $collectionHolder.find('.cantTd input').last().val(1);

    $('input').on('focus',function(){ $(this).select(); });
    $('.cantTd input').change(function(){
        if(isNaN( parseFloat($(this).val()) )) $(this).val(0);  actualizaTotales();
    });

    // abrir modal de producto en select
    //const newProd = $collectionHolder.find('[name*="producto"]').last();
    //openModal(newProd);
    const newProd = $collectionHolder.find('[name*="producto"]').last();

    productolast = $('[id*="_producto"]').last();
    productolast.select2({
