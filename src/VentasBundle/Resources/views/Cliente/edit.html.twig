{% extends "AppBundle::layout.html.twig" %}

{% block pageheader %}
<div class="pageheader notab">
    <h1 class="pagetitle">Administraci√≥n de Clientes</h1>
</div><!--pageheader-->
{% endblock %}

{% block contentwrapper %}
<div id="contentwrapper" class="contentwrapper">
<h1 id="popup_title" >{{ (entity.id) ? 'Editar datos de '~entity.nombre|upper : 'Alta de Nuevo Cliente' }}</h1>
{% include "AppBundle::notificacion.html.twig" %}
<div class="divEdicion">
    {{ form_start(form, {'attr': {'class': 'stdform'}}) }}
        {{ form_errors(form) }}
        <fieldset >
                <p>
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre, { 'attr': {'class' : 'smallinput' } }) }}
        {{ form_errors(form.nombre) }}
                </p>
                <div class="two_fields">
                    {{ form_row(form.dni, { 'attr': {'class' : 'mininput'} }) }}
                    {{ form_row(form.cuit, { 'attr': {'class' : 'smallinput'} }) }}
                </div>        
                <p>
        {{ form_label(form.direccion) }}
        {{ form_widget(form.direccion, { 'attr': {'class' : 'mediuminput capitalize' } })  }}
        {{ form_errors(form.direccion) }}    
                </p>
                <div class="locate">
        {{ form_row(form.pais, { 'attr': {'class' : 'uniformselect'  } }) }}   
        {{ form_row(form.provincia, { 'attr': {'class' : 'uniformselect'  } }) }}   
        {{ form_row(form.localidad, { 'attr': {'class' : 'uniformselect'  } }) }}   
                </div>       
                <div class="two_fields">
                    {{ form_row(form.telefono, { 'attr': {'class' : 'smallinput' } })  }}
                    {{ form_row(form.celular, { 'attr': {'class' : 'smallinput' } })  }}
                </div>
                <p>
        {{ form_label(form.email) }}
        {{ form_widget(form.email, { 'attr': {'class' : 'smallinput' ,'autocomplete':'off' } }) }}
        {{ form_errors(form.email) }}    
                </p>        
        <div class="two_fields">
            {{ form_row(form.categoria_iva, { 'attr': {'class' : 'uniformselect'  } }) }}  
        </div>                                                                                 
                                                                                     
        <div class="two_fields">
            {{ form_row(form.precioLista, { 'attr': {'class' : 'uniformselect'  } }) }}  
            {{ form_row(form.consumidorFinal) }}
        </div>                                                                                 
        <p>{{ form_row(form.observaciones, { 'attr': {'class' : 'mediuminput' } }) }}   </p>                                         
        <div class="two_fields">
            {{ form_row(form.saldoInicial, { 'attr': {'class' : 'width50' } }) }}
            {{ form_row(form.activo) }}
        </div>
            <br clear="all" /> 
            <div class="actionbutton">
                <a type="button" class="cancelar floatleft delete" href="javascript:void(0)">Eliminar</a>
                <a class="cancelar floatright" type="button" href="{{ path('ventas_cliente')}}">Cancelar</a>
                <button class="guardar floatright" type="submit" >Guardar</button>
            </div>            

        </fieldset>
{{ form_end(form) }}
{% if entity.id and app.user.access(app.session.get('unidneg_id'),'ventas_cliente_delete')  %}
        {{ form(delete_form) }}
      {%endif%}
</div>    
</div>
{% endblock %}
{% block extra_javascripts %} {% include "VentasBundle::block-locate-js.html.twig" %} {% endblock %}