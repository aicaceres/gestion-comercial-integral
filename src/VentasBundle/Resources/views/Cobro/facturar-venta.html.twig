function detectarControles(e) {
    if (e.ctrlKey && e.altKey) {
        // ctrl + alt + C
        if( e.keyCode == 67 ){
            e.preventDefault();
            //openModal($('[id*="_cliente"]'))
        }
        // ctrl + alt + F
        if( e.keyCode == 70 ){
            e.preventDefault();
            //openModal($('[id*="_formapago"]'))
        }
        // ctrl + alt + D
        if( e.keyCode == 68 ){
            e.preventDefault();
            $('.btn_list').click();
        }
        // ctrl + alt + G
        if( e.keyCode == 71  ){
            e.preventDefault();
            $('#guardar').click();
        }
    }
    // tecla + ver detalle venta
    if (e.keyCode == 171) {
        e.preventDefault();
        if( $('#linkAdd').is(':visible') )
            $('#linkAdd').click();
    }

}

