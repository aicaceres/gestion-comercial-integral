<style type="text/css">
    #ventasxcobrar tbody tr td:focus,td.operacion a:focus,.paginate_button:focus,
    .selectedline td, td a:hover {
        color:red !important;
        font-weight:bold;
    }
    #ventasxcobrar tbody tr td{
        padding:2px 10px;
    }

</style>
<div style="text-align:center;margin-bottom: 10px" class="hidden">
<a href="" class="btn btn_blue btn_dollartag ">
                <span>OTRO COBRO</span>
            </a>
</div>
<table cellpadding="0" cellspacing="0" border="0" class="stdtable" id="ventasxcobrar">
    <thead>
        <tr>
            <th># Venta</th>
            <th>Fecha / Hora</th>
            <th class="nosort">Cliente</th>
            <th class="nosort">Forma de Pago</th>
            <th class="nosort">Total</th>
            <th>Usuario</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in ventas %}
        <tr>
            <td class="alignright operacion">
                <a href="{{ path('ventas_cobro_facturar', { 'id': entity.id }) }}" title="Cobrar esta venta">#{{entity.nroOperacion}}</a>
            </td>
            <td>
                <a href="{{ path('ventas_cobro_facturar', { 'id': entity.id }) }}" title="Cobrar esta venta">{{ entity.fechaVenta|date('d-m-Y H:i') }}</a>
            </td>
            <td>
                <a href="{{ path('ventas_cobro_facturar', { 'id': entity.id }) }}" title="Cobrar esta venta">{{ entity.cliente }}</a>
            </td>
            <td>
                <a href="{{ path('ventas_cobro_facturar', { 'id': entity.id }) }}" title="Cobrar esta venta">{{ entity.formaPago }}</a>
            </td>
            <td class="alignright">
                <a href="{{ path('ventas_cobro_facturar', { 'id': entity.id }) }}" title="Cobrar esta venta">
                <span style="float:left"> {{entity.moneda.simbolo}}</span>{{ entity.montoTotal|number_format(3,'.',',') }}
                </a>
            </td>
            <td>{{entity.createdBy.nombre|upper }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>