<table style="width:100%"  cellpadding="0" cellspacing="0" border="0" class="resumen-venta stdtable noaction">
  <thead>
    <tr class="resumen">
      {% set subtotal = venta.totalesDiscriminados %}
      {% set total = subtotal.precio + subtotal.iva + venta.totalDescuentoRecargo %}
      <th id="subtotalTd">
        Subtotal: <span class="simbolo">{{venta.moneda.simbolo}}</span>&nbsp;
                  <span data-valor="{{ subtotal.precio }}" class="valor">
                    {{ (subtotal.precio/venta.cotizacion)|number_format(3,'.',',') }}
                  </span>.-
      </th>
      <th id="porcentajeRecargoTd">
        Desc./Rec. [<span class="porcentajeRecargo">
                    {{ entity.formapago.porcentajeRecargo }}
                </span>%]:
            <span class="simbolo">{{venta.moneda.simbolo}}</span>&nbsp;
            <span data-valor="{{ venta.totalDescuentoRecargo }}" class="valor">
                {{ (venta.totalDescuentoRecargo/venta.cotizacion)|number_format(3,'.',',') }}
            </span>.-
      </th>
      <th id="ivaTd">
        IVA: <span class="simbolo">{{venta.moneda.simbolo}}</span>&nbsp;
             <span data-valor="{{ subtotal.iva }}" class="valor">
                {{ (subtotal.iva/venta.cotizacion)|number_format(3,'.',',') }}
             </span>.-
      </th>
      <th id="totalTd" class="red">
        A PAGAR: <span class="simbolo">{{venta.moneda.simbolo}}</span>&nbsp;
                 <span data-valor="{{ total }} " class="valor">
                    {{ (total/venta.cotizacion)|number_format(3,'.',',') }}
                 </span>.-
      </th>
      <th style="width:34px"><a href="javascript:void(0)" title="Ver Detalle de ArtÃ­culos" class="btn btnaction btn_list"></a></th>
    </tr>
  </thead>
</table>

<table style="width:100%;" cellspacing="0" border="0" class="detalle-venta hidden stdtable noaction">
    <thead>
        <tr>
            <th style="width:3%;">#</th>
            <th>Producto</th>
            <th style="width:10%;">Cant.</th>
            <th style="width:15%;">Precio Unit.</th>
            <th style="width:15%;">SubTotal</th>
        </tr>
    </thead>
    <tbody>
    {% set neto = 0 %}
    {% for item in venta.detalles %}
        {% set neto = (neto + item.total) %}
        <tr class="item" divdata="item_{{loop.index-1}}">
            <td class="ordTd">{{loop.index}}</td>
            <td class="prodTd" style="text-align:left">
                {{ item.producto.nombre }}
            </td>
            <td class="cantTd"> {{ item.cantidad }}    </td>
            <td data-valor="{{item.precioConIva}}" class="precTd alignright valor"> {{ item.precioConv|number_format(3,'.',',') }}     </td>
            <td data-valor="{{item.total}}" class="itmSubtotalTd alignright valor">{{ item.getTotal|number_format(3,'.',',') }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="4" style="text-align:right">&nbsp; </th>
            <th class="cktotal alignright" id="subtotalTh">
                <span class="simbolo" style="float:left">{{venta.moneda.simbolo}}</span>
                <span data-valor="{{ neto }} " class="valor">
                    {{ (neto/venta.cotizacion)|number_format(3,'.',',') }}
                 </span>
            </th>
        </tr>
    </tfoot>
</table>