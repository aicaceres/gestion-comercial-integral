{% set simbolo = ( entity.moneda ) ? entity.moneda.simbolo : '$' %}
<table cellpadding="0" cellspacing="0" border="0" class="stdtable noaction">
  <thead>
    <tr class="resumen">
      <th id="gralSubtotalTd">
        Subtotal: <span class="simbolo">{{simbolo}}</span>&nbsp;<span class="valor">0</span>.-
      </th>
      <th>
        Descuento/Recargo [<span class="porcentajeRecargo">
          {{ entity.formapago.porcentajeRecargo }}
        </span>%]: <span class="simbolo">{{simbolo}}</span>&nbsp;
        <span id="importeRecargo">0</span>.-
      </th>
      <th class="gralTotalTd">
        Neto a Pagar: <span class="simbolo">{{simbolo}}</span>&nbsp;<span id="totalGral">
          0
        </span>.-
      </th>
    </tr>
  </thead>
</table>
