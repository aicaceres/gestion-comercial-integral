function detectarControles(e) {
    if( e.ctrlKey && e.altKey ){
        // ctrl + alt + C
        if( e.keyCode == 67 ){
            e.preventDefault();
            openModal($('#ventasbundle_venta_cliente'))
        }
        // ctrl + alt + J
        if( e.keyCode == 70 ){
            e.preventDefault();
            openModal($('#ventasbundle_venta_formapago'))
        }
        // ctrl + alt + G
        if( e.keyCode == 71 ){
            e.preventDefault();
            $('#ventasbundle_venta').submit();
        }
    }
    // tecla + agrega item
    if (e.keyCode == 171) {
        e.preventDefault();
        $('#linkAdd').click();
    }
}

