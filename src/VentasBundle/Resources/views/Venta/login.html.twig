
<style type="text/css">
    #confirmar-logueo:focus { background-color: royalblue; }
    #password { width: 244px !important}
</style>    
    
<div class="loginbox">
    <div class="loginboxinner">
                
        <form id="login" action="{{ path("usuario_login_check") }}" method="post">
            <div class="username">
                <div class="usernameinner">
                    <input type="text" size="25" required="required" name="_username" id="username" value="{{ app.user.username }}" onfocus="this.select();" />
                </div>          
            </div>
            <div class="password">
                <div class="passwordinner">
                    <input type="password" required="required" name="_password" id="password" autocomplete="off" autofocus="autofocus" />
                </div>
            </div>
                <input type="hidden" name="empresa" id="empresa" value="">
                <input type="hidden" name="unidad" id="unidad" value="">
                <input type="hidden" name="_target_path" value="/venta/newVenta" />                
            <button type="submit" id="confirmar-logueo">Confirmar</button>                    
        </form>
    </div><!--loginboxinner-->
</div><!--loginbox-->